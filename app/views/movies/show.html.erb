

<div class="container mt-5">

<div class="row justify-content-end">
   <div class="col-md-4 ms-auto">
       <%= image_tag(@movie.poster, class:"large-poster") %> 
  </div>

    <div class="col-md-6 ">
        <p class="text-white mt-4 fw-light fs-4 mb-4">Title: <%= @movie.title %></p>
        <p class="p-2 fw-lighter text-white">Year: <%= @movie.year %>
        <p class="p-2 fw-lighter text-white"><%= image_tag 'imdb.png', class:"logo" %><%= @movie.rating%>

        <p class="d-inline p-2 fw-lighter text-white">Category: </p>
        <% @movie.categories[0...-1].each do |category| %>
          <p class="d-inline fw-lighter text-white"><%= category.name %> | </p>
         
        <%end%>
        
        <p class="d-inline fw-lighter text-white"><%= @movie.categories.last.name %></p>

        <p class="p-2 fw-lighter text-white mt-5">Plot: <br> <%= @movie.plot %></p>
 
     <div class="mt-5">
      <%= link_to "Edit", edit_movie_path(@movie), class:"btn btn-primary " %>
      <%= button_to "Delete", @movie, method: :delete , class:"btn btn-danger mt-2" %></div>
    </div> 
     
        
      
  </div>
  
</div>
