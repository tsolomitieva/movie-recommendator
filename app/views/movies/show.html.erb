

<div class="container mt-5">

  <div class="row justify-content-end">
    <div class="col-md-4 ms-auto">
    <%= image_tag(poster_for_movie(@movie),class:"large-poster")%>
    </div>

     <div class="col-md-6 ">
          <p class="text-white mt-4 fw-light fs-4 mb-4">Title: <%= @movie.title %></p>
          <p class="p-2 fw-lighter text-white">Year: <%= @movie.year %>
          <p class="p-2 fw-lighter text-white"><%= image_tag 'imdb.png', class:"logo" %><%= @movie.rating%>

          <p class="d-inline p-2 fw-lighter text-white">Category: </p>
          <% @movie.categories.each do |category| %>
            <p class="d-inline  fw-lighter text-white"><%= category.name %></p>
            <% if category != @movie.categories.last %>
              <p class="d-inline  fw-lighter text-white">|</p>
            <% end %>
          <%end%>

          <p class="p-2 fw-lighter text-white mt-5">Plot: <br> <%= @movie.plot %></p>
          <% if current_user.role = 'admin' %>
            <div class="mt-4">
              
                <%= link_to "Edit", edit_admin_movie_path(@movie), class:"btn btn-primary " %>
                <%= button_to "Delete", @movie, method: :delete , class:"btn btn-danger mt-2" %>
              
            </div> 
          <%end%>
      </div> 
  </div>
  
</div>
