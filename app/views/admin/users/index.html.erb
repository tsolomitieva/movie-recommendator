<div class="container mt-5">
  <table class="table table-striped table-light">

    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Ban</th>
      <th></th>
    </tr>


  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.ban %></td>
        <% if user.user?%>
          <%if user.ban?%>
            <td><%= button_to "unban account", ban_account_admin_user_path(user), method: :post, class:"btn btn-danger" %></td>
          <%else%>
          <td><%= button_to "ban account", ban_account_admin_user_path(user), method: :post, class:"btn btn-primary" %></td>
          <%end%>
        <%else%>
          <td>This is an admin account</td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
  </table>
</div>