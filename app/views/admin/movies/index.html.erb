<div class="container ">
  <div class="d-flex justify-content-center">
    <%= link_to "Add movie", new_admin_movie_path(), class:"btn btn-info m-4" %>
    <%= link_to "Add category", new_admin_category_path(), class:"btn btn-warning m-4" %>
  </div>
  <%= search_form_for @q do |f| %>
    <div class="input-group">
      <%= f.text_field :title_or_categories_name_cont, class: "form-control ", placeholder: "Insert title" %>
      <%= f.submit class: "btn btn-outline-light " %>
    </div>
  <%end%>
  <div class="mt-4 d-flex justify-content-center">
   <%= paginate @movies %>
  </div>
  <div class="row mt-5">
    <% @movies.each do |movie| %>
      
      <%= render movie %>
    
      <% end %>
    
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @movies %>
  <div>
  </div>
