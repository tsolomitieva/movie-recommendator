<div class="container mt-5 text-white text-center">
  <% if @match.present? %>
    <h2> We found a match</h2>
    <%= image_tag(poster_for_movie(@match),class:"poster mt-5")%>
    <p class="text-white mt-4 fw-light fs-4 mb-2"><%= @match.title %></p>
    <div class="d-inline p-2 fw-lighter text-white"><%= @match.year %></div>
    <div class="d-inline p-2 fw-lighter text-white"><%= image_tag 'imdb.png', class:"logo" %><%= @match.rating%></div>
  <%else%>
    <h2> Sorry, we couldn't find a match</h2>
  <%end%>
</div>
